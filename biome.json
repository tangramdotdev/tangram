{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"formatter": {
		"useEditorconfig": true
	},
	"json": {
		"formatter": {
			"indentStyle": "tab"
		}
	},
	"linter": {
		"rules": {
			"complexity": {
				"noBannedTypes": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"noUselessElse": "off",
				"useConst": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noRedeclare": "off",
				"useIsArray": "off"
			}
		}
	}
}
